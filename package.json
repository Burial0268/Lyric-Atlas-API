{
  "name": "lyric-atlas-api",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --require dotenv/config src/index.ts",
    "esm:build": "esbuild src/index.ts --platform=node --format=esm --outdir=dist --target=node20",
    "typecheck": "tsc --noEmit",
    "esm:start": "node dist/index.js",
    "swc:start": "node main.js",
    "swc:build": "swc src/index.ts -o main.js"
  },
  "dependencies": {
    "hono": "^4.7.8"
  },
  "devDependencies": {
    "@hono/node-server": "^1.14.1",
    "@swc/cli": "^0.1.65",
    "@swc/core": "^1.11.22",
    "@swc/helpers": "^0.5.17",
    "@types/node": "^20.17.31",
    "dotenv": "^16.5.0",
    "esbuild": "^0.23.1",
    "tsx": "^4.19.3",
    "typescript": "~5.7.3"
  }
}
